<header class="navbar navbar-fixed-top navbar-default">
    
    <div class="container">
      
      <%= link_to "Living Room", root_path, class: "btn btn-lg btn-inverse", id: "logo" %>
      
      
      <ul class="nav_ul_item">
        <li class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-inverse dropdown-toggle", "data-toggle" => "dropdown" do %>
              Trends <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Trend.all.each do |trend| %>
                <li><%= link_to trend.name, trend_path(trend) %></li>
              <% end %>
              <% if logged_in? %>
                <li class='divider'></li>
                <li>
                  <%= link_to(new_trend_path) do %>
                    New Trend
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
      </ul>
      
      <ul class="nav_ul_item">
        <li class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-inverse dropdown-toggle", "data-toggle" => "dropdown" do %>
              Topics <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <% Topic.all.each do |topic| %>
                <li><%= link_to topic.name, topic_path(topic) %></li>
              <% end %>
              <% if logged_in? %>
                <li class='divider'></li>
                <li>
                  <%= link_to(new_topic_path) do %>
                    New Topic
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>
      </ul>
      
      <% if logged_in? %>
        <div class="nav_item">
          <%= link_to "New Post", new_post_path, class: "btn btn-default btn-inverse" %>
        </div>
        <ul class="nav_item">
          <li class="dropdown">
            <%= link_to '#', class: "btn btn-default btn-primary dropdown-toggle", "data-toggle" => "dropdown" do %>
              <%= current_user.username %> <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", user_path(current_user) %></li>
              <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path %></li>
            </ul>
          </li>
        </ul>
      <% else %>
        <div class="nav_item">
          <%= link_to "Login", login_path, class: "btn btn-default btn-inverse" %>
        </div>
      <% end %>

    </div>
</header>