<%= render 'shared/page_title', title: "Create a new Trend" %>

<%= render 'shared/errors', obj: @trend %>

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @trend do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    
    <%= f.submit 'Create Trend', class: "btn btn-success" %>
    <% end %>
  </div>
</div>